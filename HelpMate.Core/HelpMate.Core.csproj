<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageLicenseFile></PackageLicenseFile>
    <Description>A tiny helper for writing .NET Core applications. This library provides a simple set of extension methods that you can use to perform common validations and conversions in C#.</Description>
    <PackageProjectUrl>https://github.com/proudmonkey/HelpMate.Core</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>helpmatecore_logo.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/proudmonkey/HelpMate.Core</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>C# Helper,C# Utilities,C# Extension Methods,.NET Core Extension Methods, Extension Methods, Common Functions, Validations, Value Handling</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Vincent Maverick Durano</Authors>
    <Version>2.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="helpmatecore_logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="5.0.1" />
  </ItemGroup>

</Project>
